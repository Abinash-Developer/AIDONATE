<%- include('../../layouts/main') %>
<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Hello, <span>Welcome Here</span></h1>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                                <li class="breadcrumb-item active">Charity</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <!-- /# row -->
            <section id="main-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-title">
                                <h4>Charity</h4>
                                
                            </div>
                            <div class="bootstrap-data-table-panel">
                                <div class="table-responsive">
                                    <table id="row-select" class="display table table-borderd table-hover">
                                        <thead>
                                            <tr>
                                                <th>NGO ID</th>
                                                <th>NAME</th>
                                                <th>EMAIL</th>
                                                <th>CONTACT NO</th>
                                                <th>COUNTRY</th>
                                                <th>STATE</th>
                                                <th>CITY</th>
                                                <th>PINCODE</th>
                                                <th>STATUS</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            <% for(var i=0; i < ngoresult.length; i++) { %>
                                            <tr>
                                                <td><%= ngoresult[i].ngogovtId %></td>
                                                <td><%= ngoresult[i].ngoname %></td>
                                                <td><%= ngoresult[i].email %></td>
                                                <td><%= ngoresult[i].phoneNumber %></td>
                                                <td><%= ngoresult[i].country %></td>
                                                <td><%= ngoresult[i].state.name %></td>
                                                <td><%= ngoresult[i].district.name %></td>
                                                <td><%= ngoresult[i].pincode %></td>
                                                <td>
                                                    <a href="/charity/<%= ngoresult[i]._id %>" class="btn btn-rounded btn-primary">EDIT</a>
                                                    <a href="" class="btn btn-rounded btn-secondary">VIEW</a>
                                                <% if(ngoresult[i].status == 'active'){%>
                                                     <button type="button" class="btn btn-rounded btn-success" data-id="<%= ngoresult[i]._id%>" onclick="deActivateCharity(this)">DEACTIVE</button>
                                                <% }else{%>
                                                     <button type="button" class="btn btn-rounded btn-danger" data-id="<%= ngoresult[i]._id%>" onclick="ActivateCharity(this)">ACTIVE</button>
                                                <%} %>
                                               </td>
                                            </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!-- /# card -->
                    </div>
                    <!-- /# column -->
                </div>
                <!-- /# row -->

                <div class="row">
                    <div class="col-lg-12">
                        <div class="footer">
                            <p>2018 Â© Admin Board. - <a href="#">example.com</a></p>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>