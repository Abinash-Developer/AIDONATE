<%- include('../../layouts/main') %>
<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Hello, <span>Welcome Here</span></h1>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
                <div class="col-lg-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                                <li class="breadcrumb-item active">Charity</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- /# column -->
            </div>
            <!-- /# row -->
            <section id="main-content">
                <!-- /# row -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-title">
                                <h4>Edit Charity</h4>
                            </div>
                            <div class="card-body">
                                <div class="basic-form">
                                    <form id="editcharity" enctype="multipart/form-data" onsubmit="event.preventDefault();">
                                        <input type="hidden" name="id" value="<%= charity._id %>">
                                        <div class="form-group">
                                            <label>Ngo Name</label>
                                            <input type="text" name="name" class="form-control" value="<%= charity.ngoname %>" placeholder="Enter Name">
                                        </div>
                                        <div class="form-group">
                                            <label>Ngo Govt ID</label>
                                            <input type="text" name="ngoid" class="form-control" value="<%= charity.ngogovtId %>" placeholder="Entyer govt id">
                                        </div>
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="email" name="email" class="form-control" value="<%= charity.email %>" placeholder="Enter email">
                                        </div>
                                        <div class="form-group">
                                            <label>Phone Number</label>
                                            <input type="number" name="phone" class="form-control" value="<%= charity.phoneNumber %>" placeholder="Enter Phone Number">
                                        </div>
                                        <div class="form-group">
                                            <label>State</label>
                                            <select name="state" id="state" class="form-control">
                                                <% state.forEach((states) => { %>
                                                    <option value="<%= states._id %>" <%= states._id.toString() === charity.state.toString() ? 'selected' : '' %>>
                                                        <%= states.name %>
                                                    </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>City</label>
                                            <select name="city" id="city" class="form-control">
                                                <% city.forEach((citys) => { %>
                                                    <option value="<%= citys._id %>" <%= citys._id.toString() === charity.district.toString() ? 'selected' : '' %>>
                                                        <%= citys.name %>
                                                    </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Pincode</label>
                                            <input type="text" name="pincode" class="form-control" value="<%= charity.pincode %>" placeholder="Enter pincode">
                                        </div>
                                        <div class="form-group">
                                            <label>Goal of amount</label>
                                            <input type="number" name="goal" class="form-control" placeholder="Enter Goal of amount" value="<%= charity.metaData[0]?.meta_value %>">
                                        </div>
                                        <div class="form-group">
                                            <label>Description</label>
                                            <textarea type="textarea" class="form-control" name="description" rows="3" placeholder="Enter Description"><%= charity.metaData[1]?.meta_value %></textarea>
                                        </div>
                                        <div class="form-group">
                                            <img src="/uploads/<%= charity.metaData[2]?.meta_value %>" alt="" id="output" width="200">
                                            <label>Profile Image</label>
                                            <input type="file" name="image" class="form-control" placeholder="Category Image" onchange="previewImages(event)">
                                            <!-- <img id="output" width="200" /> -->
                                        </div>
                                        <button type="submit" class="btn btn-default">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </section>
        </div>
    </div>
</div>
